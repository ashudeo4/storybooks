<% include ../partials/header %>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h2>
                    <%=story.title%>
                </h2>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-8">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <p class="card-text">
                            <%=story.body.replace(/(<([^>]+)>)/ig,"")%>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="<%=story.user.image%>" alt="Card image cap">
                    <div class="card-body">
                        <p class="card-text">
                            <%=story.user.firstName%>
                                <%=story.user.lastName%>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>















    <% include ../partials/footer %>